  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Debug",
      "type": "pwa-node",
      "program": "${workspaceFolder}/app.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect",
        "--allow-net=0.0.0.0",
        "--allow-read=frontend,backend",
        "--allow-write=backend/data.json"
      ],
      "attachSimplePort": 9229
    }
  ]
}
